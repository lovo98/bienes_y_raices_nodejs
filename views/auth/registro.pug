extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/create_registro")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Nombre:
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre" value=usuario ? usuario.nombre : '')
                    div                
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Email:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Email" type="email" name="email" value=usuario ? usuario.email : '' )
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Password:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Repetir password:
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Repetir password" type="password" name="repetir_password")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Â¿Ya tienes cuenta? Inicia session
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi password
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")